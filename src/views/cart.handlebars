<div class='d-flex justify-content-between p-3' style='background-color: #f1f1f1'>
  <a href='{{baseUrl}}/home/products' class='btn btn-success me-2'><i class="fa fa-home fa-fw"></i></i> Home</a>
  <a href='{{baseUrl}}/logout' class='btn btn-danger'><i class='fas fa-sign-out-alt'></i> Log out</a>
</div>

<div class='container' style='margin-top: 20px'>
  <h1>CART</h1>
  <div class='d-flex flex-column mb-3 gap-3'>
    {{#each cart}}
      <div class='d-flex flex-row mb-10'>
        <img src='{{this.thumbnails}}' class='me-4 w-3' alt='Product image' style='height: 150px; width: 150px;object-fit: cover;' />
        <div class='w-70'>
          <h5>{{title}}</h5>
          <p style='font-weight: bold; font-size: 24px;'>{{price}} USD</p>
          <p>Quantity: {{quantity}} unit/s</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>